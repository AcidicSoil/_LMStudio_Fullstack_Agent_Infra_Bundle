{
  "info": {
    "name": "LM Studio Chat API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Send Chat Message",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"message\": \"What are the steps to deploy this pipeline?\" }"
        },
        "url": {
          "raw": "http://localhost:8000/chat",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8000",
          "path": [
            "chat"
          ]
        }
      }
    },
    {
      "name": "Get Logs",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8000/logs",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "8000",
          "path": [
            "logs"
          ]
        }
      }
    }
  ]
}